<script type="text/javascript">
  $(document).ready(function(){
    var sources = [
      <% @teams.each do |team| %>
        {
          url: "/teams/<%=team.id%>/events.json?user_id=<%=current_user.id%>",
          color: "<%= (team.color.blank?) ? '#f5fef1' : team.color %>"
        },
      <% end %>
      {
        url: "/events.json?public_events=1",
        color: "#000"
      }
    ];

    init_fullCalendar('#calendar', sources, false)
  })
</script>
