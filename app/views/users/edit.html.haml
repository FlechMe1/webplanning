%section.content-header
  %h1
    Membres
    %small Modifier un membre

%section.content
  .box
    .box-body
      = form_for @user do |f|
        - if @user.errors.any?
          .callout.callout-danger
            %h4= "#{pluralize(@user.errors.count, "erreur")}"
            %ul
              - @user.errors.full_messages.each do |msg|
                %li= msg


        %fieldset
          .row
            .col-md-6
              .form-group
                = f.label :firstname
                = f.text_field :firstname, :autofocus => true, class: 'form-control'
            .col-md-6
              .form-group
                = f.label :lastname
                = f.text_field :lastname, :autofocus => true, class: 'form-control'

        .form-group
          = f.label :email
          = f.email_field :email, class: 'form-control'

        .form-group
          = f.label :birthdate
          = f.text_field :birthdate, class: "form-control", value: "#{l @user.birthdate unless @user.birthdate.blank?}"
          %span.help-block Format 'jj/mm/aaaa'


        %fieldset
          %p Si vous ne souhaitez pas changer votre mot de passe, laisser ces champs vides

          .form-group
            = f.label :password
            = f.password_field :password, :autocomplete => 'off', class: 'form-control'

          .form-group
            = f.label :password_confirmation
            = f.password_field :password_confirmation, class: 'form-control'


        .form-group
          %button.btn.btn-success{type: :submit}
            Enregistrer
